<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".views.DownloadClientDataActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="@dimen/spacing_small"
      android:paddingLeft="@dimen/spacing_small"
      android:paddingRight="@dimen/spacing_medium">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_mlarge"
        android:layout_marginRight="@dimen/spacing_mlarge"
        android:text="DOWNLOAD DATA"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/grey_60" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_file_download"
              app:tint="@color/colorPrimaryLight"/>
          <Button
              android:id="@+id/downloadClientData"
              android:background="@color/transparent"
              android:layout_width="wrap_content"
              android:layout_height="55dp"
              android:tint="@color/grey_40"
              android:text="Download Client"
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium"
              android:textAlignment="center" />
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/spacing_large"
              android:layout_marginRight="@dimen/spacing_large"
              android:layout_weight="1"
              android:text=""
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium" />

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_arrow_right"
              app:tint="@color/grey_40" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_file_download"
              app:tint="@color/colorPrimaryLight" />
          <Button
              android:id="@+id/downloadAdminHierarchyData"
              android:layout_width="wrap_content"
              android:layout_height="55dp"
              android:text="Download Admin Hierarchy"
              android:background="@color/transparent"
              android:tint="@color/grey_40"
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium"
              android:textAlignment="center"/>
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/spacing_large"
              android:layout_marginRight="@dimen/spacing_large"
              android:layout_weight="1"
              android:text=""
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium" />

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_arrow_right"
              app:tint="@color/grey_40" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_file_download"
              app:tint="@color/colorPrimaryLight" />
          <Button
              android:id="@+id/downloadAdminHierarchyExtendedData"
              android:layout_width="wrap_content"
              android:layout_height="55dp"
              android:text="Admin Hierarchy Extended"
              android:background="@color/transparent"
              android:tint="@color/deep_purple_500"
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium"
              android:textAlignment="center" />
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/spacing_large"
              android:layout_marginRight="@dimen/spacing_large"
              android:layout_weight="1"
              android:text=""
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium" />


          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_arrow_right"
              app:tint="@color/grey_40" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_file_download"
              app:tint="@color/colorPrimaryLight" />
          <Button
              android:id="@+id/downloadDivisionData"
              android:layout_width="wrap_content"
              android:layout_height="55dp"
              android:text="Download Division"
              android:background="@color/transparent"
              android:tint="@color/grey_40"
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium"
              android:textAlignment="center"  />
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/spacing_large"
              android:layout_marginRight="@dimen/spacing_large"
              android:layout_weight="1"
              android:text=""
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium" />

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_arrow_right"
              app:tint="@color/grey_40" />

        </LinearLayout>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_mlarge"
        android:layout_marginRight="@dimen/spacing_mlarge"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="UPLOAD DATA"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/grey_60" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_cloud_upload"
              app:tint="@color/colorPrimaryLight" />
          <Button
              android:id="@+id/uploadClientData"
              android:layout_width="wrap_content"
              android:layout_height="55dp"
              android:text="Upload Client"
              android:background="@color/transparent"
              android:tint="@color/grey_40"
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium"
              android:textAlignment="center" />
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/spacing_large"
              android:layout_marginRight="@dimen/spacing_large"
              android:layout_weight="1"
              android:text=""
              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
              android:textColor="@color/grey_80"
              app:fontFamily="sans-serif-medium" />

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              app:srcCompat="@drawable/ic_arrow_right"
              app:tint="@color/grey_40" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_5" />


      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>
</LinearLayout>