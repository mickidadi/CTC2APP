<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".views.DownloadClientDataActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:padding="20dp"
    android:gravity="center"
     >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:textAlignment="center"
      android:padding="20dp"
      android:gravity="center"
      >
  <Button
      android:id="@+id/downloadClientData"
      android:layout_width="191dp"
      android:layout_height="55dp"
      android:text="Download Client"
      android:textAlignment="center" />
  <Button
      android:id="@+id/uploadClientData"
      android:layout_width="191dp"
      android:layout_height="55dp"
      android:text="Upload Client"
      android:textAlignment="center" />
    <Button
        android:id="@+id/downloadAdminHierarchyData"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Download Adminhierarchy"
        android:textAlignment="center" />
    <Button
        android:id="@+id/downloadAdminHierarchyExtendedData"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Adminhierarchy Extended"
        android:textAlignment="center" />
    <Button
        android:id="@+id/downloadDivisionData"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Download Division"
        android:textAlignment="center" />
  </LinearLayout>
</LinearLayout>
</LinearLayout>